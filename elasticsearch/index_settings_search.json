{
  "settings": {
    "index": {
      "number_of_replicas": 0,
      "analysis": {
        "filter": {
          "autocomplete_filter": {
            "type":     "edge_ngram",
            "min_gram": 2,
            "max_gram": 20,
            "token_chars": [
              "letter",
              "digit",
              "punctuation",
              "symbol"
            ]
          },
          "word_delimiter_filter": {
            "type": "word_delimiter",
            "catenate_numbers": false,
            "catenate_words": false,
            "generate_word_parts": true,
            "generate_number_parts": true,
            "catenate_all": false,
            "split_on_case_change": false,
            "split_on_numerics": false,
            "preserve_original": true,
            "stem_english_possesive": true
          }
        },
        "analyzer": {
          "autocomplete": {
            "type":      "custom",
            "tokenizer": "whitespace",
            "filter": [
              "lowercase",
              "word_delimiter_filter",
              "autocomplete_filter"
            ]
          },
          "autocomplete_search": {
            "type":      "custom",
            "tokenizer": "whitespace",
            "filter": [
              "lowercase",
              "word_delimiter_filter"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
        "id": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 128
            }
          }
        },
        "relevance_multiplier": {
          "type": "float"
        },
        "entity": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "field_keyword": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "field_prefix": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "field_ngram": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "autocomplete_search"
        }
    }
  }
}



